<?xml version="1.0" encoding="utf-8"?>
<Defs>

<!-- Gasmask - Standalone --> 
	
	<ThingDef ParentName="HatMakeableBase">
		<defName>KP_GasMask_Standalone</defName>
		<label>Gas Mask</label>
		<description>.</description>
		<techLevel>Spacer</techLevel>

		<recipeMaker>
			<researchPrerequisite>LateIndustrialFlakArmor</researchPrerequisite>      
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="false">
				<li>FabricationBench</li>
			</recipeUsers>	
		</recipeMaker>	

		<graphicData>
			<texPath>Gasmask/gas_mask/gasmask</texPath>
			<graphicClass>Graphic_Single</graphicClass>         
		</graphicData>	

		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>4500</WorkToMake>
			<Mass>1</Mass>
			<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Heat>0.7</ArmorRating_Heat>
			<Insulation_Cold>2</Insulation_Cold>
			<Insulation_Heat>1</Insulation_Heat>
			<EquipDelay>2.5</EquipDelay>
		</statBases>

		<equippedStatOffsets>
			<ToxicResistance>0.45</ToxicResistance>
			<ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.1</ToxicEnvironmentResistance>	
		</equippedStatOffsets>

		<thingCategories Inherit='False'>
			<li>Headgear</li>
		</thingCategories>

		<costList>
			<Steel>40</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>

		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<developmentalStageFilter>Child, Adult</developmentalStageFilter>
			<immuneToToxGasExposure>true</immuneToToxGasExposure>
			<!-- <forceRenderUnderHair>true</forceRenderUnderHair> -->			
			<bodyPartGroups>
				<li>Teeth</li>
				<li>Eyes</li>
			</bodyPartGroups>
			<wornGraphicPath>Textures/gas_mask/gasmask</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>IndustrialAdvanced</li>
				<li>IndustrialMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			   </defaultOutfitTags>
		</apparel>
	</ThingDef>	

