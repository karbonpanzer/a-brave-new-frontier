<?xml version="1.0" ?>
<Defs>

  <ThingDef ParentName="KP_CarapaceArmors">
    <defName>KP_Riot_Armor</defName>
    <label>riot armor</label>
    <description>A padded leather vest reinforced with industrial plating. Cheap and mass-producible gear once issued to enforcers and penal units.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>LateIndustrialFlakArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="false">
        <li>TableMachining</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Armor/Riot/RiotArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <Mass>6.0</Mass>
      <MarketValue>180</MarketValue>
      <MaxHitPoints>110</MaxHitPoints>
      <StuffEffectMultiplierArmor>0.30</StuffEffectMultiplierArmor>
      <EquipDelay>3.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.03</MoveSpeed>
    </equippedStatOffsets>
    <costList>
      <Cloth>40</Cloth>
      <Steel>20</Steel>
    </costList>
    <costStuffCount>60</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Neck</li>
      </bodyPartGroups>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
        <li>IndustrialMilitaryAdvanced</li>
        <li>OutlanderAdvanced</li>
        <li>SpacerMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <wornGraphicPath>Armor/Riot/RiotArmor</wornGraphicPath>
    <colorGenerator Class="ColorGenerator_StandardApparel"/>

  </ThingDef>
  <ThingDef ParentName="KP_CarapaceHelmets">
    <defName>KP_Riot_Helmet</defName>
    <label>riot helmet</label>
    <description>A reinforced leather helmet offering modest protection and visibility, often used in urban pacification and riot control.</description>
