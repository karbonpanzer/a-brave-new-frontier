<?xml version="1.0" ?>
<Defs>

  <ThingDef ParentName="KP_CarapaceArmors">
    <defName>KP_Psycher_Armor</defName>
    <label>psycher armor</label>
    <description>Specialized uniform with psylink harmonics sewn into the lining. Slightly less durable, but enhances sensitivity in psychic users.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <researchPrerequisite>SpacerPsychicApparel</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="false">
        <li>TableTailor</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Armor/Psycher/PsycherArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <Mass>5.5</Mass>
      <MarketValue>320</MarketValue>
      <MaxHitPoints>110</MaxHitPoints>
      <StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
      <EquipDelay>3.5</EquipDelay>
      <PsychicSensitivity>0.05</PsychicSensitivity>
    </statBases>
    <costList>
      <Cloth>80</Cloth>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <costStuffCount>60</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Neck</li>
      </bodyPartGroups>
      <wornGraphicPath>Armor/Psycher/PsycherArmor</wornGraphicPath>
      <useWornGraphicMask>True</useWornGraphicMask>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>SpacerMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel"/>

  </ThingDef>
  <ThingDef ParentName="KP_CarapaceHelmets">
    <defName>KP_Psycher_Hood</defName>
    <label>psycher hood</label>
    <description>A soft hood with an embedded psylink receptor mesh. Increases a psycaster's clarity without offering much defense.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <researchPrerequisite>SpacerPsychicApparel</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechHelmet</unfinishedThingDef>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="false">
        <li>TableTailor</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Armor/Psycher/PsycherHood</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <Mass>1.2</Mass>
      <MarketValue>220</MarketValue>
      <MaxHitPoints>85</MaxHitPoints>
      <StuffEffectMultiplierArmor>0.15</StuffEffectMultiplierArmor>
      <EquipDelay>2.0</EquipDelay>
      <PsychicSensitivity>0.10</PsychicSensitivity>
    </statBases>
    <costList>
      <Cloth>40</Cloth>
    </costList>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <thingCategories>
      <li>ApparelArmorHeadgear</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Armor/Psycher/PsycherHood</wornGraphicPath>
      <useWornGraphicMask>True</useWornGraphicMask>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>SpacerMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel"/>

  </ThingDef>
</Defs>
