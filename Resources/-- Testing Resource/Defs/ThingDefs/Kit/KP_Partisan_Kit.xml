<?xml version="1.0" ?>
<Defs>

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>KP_Slouch_Hat_Partisan</defName>
    <label>slouch hat</label>
    <description>A wide-brimmed cloth hat offering modest shade and concealment. Common among partisans and scouts across the Rim.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>LateIndustrialUniforms</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Clothes/SlouchHatPartisan/SlouchHatPartisan</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <WorkToMake>1200</WorkToMake>
      <Mass>0.5</Mass>
      <MarketValue>30</MarketValue>
      <MaxHitPoints>70</MaxHitPoints>
      <StuffEffectMultiplierArmor>0.05</StuffEffectMultiplierArmor>
      <EquipDelay>1.0</EquipDelay>
    </statBases>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <thingCategories>
      <li>ClothingHeadgear</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Clothes/SlouchHatPartisan/SlouchHatPartisan</wornGraphicPath>
      <useWornGraphicMask>True</useWornGraphicMask>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>OutlanderBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel"/>

  </ThingDef>
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>KP_Webbing_Partisan</defName>
    <label>partisan webbing</label>
    <description>Lean, optimized webbing for stealth and distance-fighting. Worn by sharpshooters and resistance cells in unpredictable terrain.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>LateIndustrialKitInfantry</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Accessories/PartisanWebbing/PartisanWebbing</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <WorkToMake>4200</WorkToMake>
      <Mass>0.9</Mass>
      <MarketValue>130</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <StuffEffectMultiplierArmor>0</StuffEffectMultiplierArmor>
      <EquipDelay>1</EquipDelay>
      <HuntingStealth>0.15</HuntingStealth>
      <MoveSpeed>0.05</MoveSpeed>
    </statBases>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>KP_Accessories</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Waist</li>
      </bodyPartGroups>
      <wornGraphicPath>Accessories/PartisanWebbing/PartisanWebbing</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
        <li>OutlanderAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel"/>

  </ThingDef>
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>KP_Uniform_Padded</defName>
    <label>frontier uniform (padded)</label>
    <description>A rugged reinforced uniform used by partisans on the feral world of Durandal. Thickly padded for additional protection in ambushes and raids.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>LateIndustrialUniforms</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Clothes/PaddedUniform/PaddedUniform</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>0.8</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <Mass>2.2</Mass>
      <MarketValue>140</MarketValue>
      <MaxHitPoints>110</MaxHitPoints>
      <StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>75</costStuffCount>
    <thingCategories>
      <li>KP_Uniforms</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Clothes/PaddedUniform/PaddedUniform</wornGraphicPath>
      <useWornGraphicMask>True</useWornGraphicMask>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
        <li>OutlanderAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel"/>

  </ThingDef>
</Defs>
