<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Modified Sharp (Cut) Gauntlets with melee verb -->
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>KP_Talon_Gauntlets</defName>
    <label>Aquila Carapace Gauntlets</label>
    <description>Carapace-based gauntlets with built-in cutting edges. When worn, they let the wearer deliver precise slashes even if they're holding another weapon.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <researchPrerequisite>StormtrooperKit</researchPrerequisite>
    </recipeMaker>	

    <graphicData>
      <texPath>Armor/ArmoredGloves/ArmoredGloves</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>

    <uiIconScale>2</uiIconScale>

    <statBases>
		<WorkToMake>5500</WorkToMake>
		<MarketValue>100</MarketValue>
	    <MaxHitPoints>90</MaxHitPoints>
        <Mass>3</Mass>
	    <StuffEffectMultiplierArmor>1.15</StuffEffectMultiplierArmor>
	    <EquipDelay>2</EquipDelay>
    </statBases>

	<verbs>
	  <li>
		<verbClass>Verb_MeleeAttack</verbClass>
		<label>slash</label>
		<meleeDamageBaseAmount>11</meleeDamageBaseAmount>
		<meleeDamageDef>Cut</meleeDamageDef>
		<range>1.3</range>
	  </li>
	</verbs>

    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>

    <costList>
      <Cloth>10</Cloth>
      <Plasteel>5</Plasteel>
    </costList>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>10</costStuffCount>

    <apparel>
      <bodyPartGroups>
        <li>Hands</li>
      </bodyPartGroups>
      <useWornGraphicMask>True</useWornGraphicMask>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
        <li>IndustrialMilitaryAdvanced</li>
        <li>SpacerMilitary</li>
        <li>OffworlderShocktrooper</li>		
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>

    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

