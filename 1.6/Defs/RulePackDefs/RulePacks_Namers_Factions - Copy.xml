<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- OFFWORLDER FACTION (CIVIL): Corporate companies only -->
  <RulePackDef>
    <defName>NamerFactionOffworlderCivil</defName>
    <label>Corporate Offworlder faction namer</label>
    <include>
      <li>OutlanderPlaceNameUtility</li>
    </include>
    <rulePack>
      <rulesStrings>
        <!-- Core corporate company patterns -->
        <li>r_name-> [corpBrand] [corpSuffix]</li>
        <li>r_name-> [corpBrand]-[corpIndustry]</li>
        <li>r_name-> [corpFounder]-[corpIndustry]</li>

        <!-- Expanded corporate variety (still pure company names) -->
        <li>r_name-> [corpBrand]-[corpBrand]</li>
        <li>r_name-> [corpFounder]-[corpFounder]</li>
        <li>r_name-> [corpBrand] and [corpBrand]</li>
        <li>r_name-> [corpFounder] and [corpFounder]</li>
        <li>r_name-> [corpBrand] [corpIndustry] [corpSuffix]</li>

        <!-- Planet flavor (no numerals) -->
        <li>r_name-> [corpBrand] [corpSuffix] of [civilPlanet]</li>

        <!-- Corporate security as company names -->
        <li>r_name-> [corpBrand] [corpSecuritySuffix]</li>
      </rulesStrings>
      <rulesFiles>
        <li>corpBrand->NameBanks/Corp_Brands</li>
        <li>corpFounder->NameBanks/Corp_Founders</li>
        <li>corpIndustry->NameBanks/Corp_Industries</li>
        <li>corpSuffix->NameBanks/Corp_Suffixes</li>
        <li>corpSecuritySuffix->NameBanks/Corp_SecuritySuffixes</li>
        <li>civilPlanet->NameBanks/Planets</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>

  <!-- OFFWORLDER SETTLEMENT (CIVIL): Neutral-only town names (no corporate, no numerals) -->
  <RulePackDef>
    <defName>NamerSettlementOffworlderCivil</defName>
    <label>Offworlder Settlements – Civil (Neutral)</label>
    <include>
      <li>OutlanderPlaceNameUtility</li>
    </include>
    <rulePack>
      <rulesStrings>
        <!-- Neutral town patterns -->
        <li>r_name-> [plainTown]</li>
        <li>r_name-> [townPrefix] [plainTown]</li>
        <li>r_name-> [plainTown] on [civilPlanet]</li>

        <!-- Descriptive landscape/urban forms (no Fort/Port, no water-only terms) -->
        <li>r_name-> [coreWord] Ridge</li>
        <li>r_name-> [coreWord] Heights</li>
        <li>r_name-> [coreWord] Plains</li>
        <li>r_name-> [coreWord] Meadow</li>
        <li>r_name-> [coreWord] Meadows</li>
        <li>r_name-> [coreWord] Grove</li>
        <li>r_name-> [coreWord] Hollow</li>
        <li>r_name-> [coreWord] Hollows</li>
        <li>r_name-> [coreWord] Crossing</li>
        <li>r_name-> [coreWord] Junction</li>
        <li>r_name-> [coreWord] Point</li>
        <li>r_name-> [coreWord] View</li>
        <li>r_name-> [coreWord] Vista</li>
        <li>r_name-> [coreWord] Terrace</li>
        <li>r_name-> [coreWord] Park</li>
        <li>r_name-> [coreWord] Square</li>
        <li>r_name-> [coreWord] Commons</li>

        <!-- Builders -->
        <li>plainTown-> [coreWord][townSuffix]</li>
        <li>coreWord-> [townCore]</li>
      </rulesStrings>
      <rulesFiles>
        <li>townPrefix->NameBanks/Town_Prefixes</li>
        <li>townCore->NameBanks/Town_Cores</li>
        <li>townSuffix->NameBanks/Town_Suffixes</li>
        <li>civilPlanet->NameBanks/Planets</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>

