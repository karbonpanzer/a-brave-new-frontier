<?xml version='1.0' encoding='utf-8'?>
<Defs>
	<!--==================== Gas Mask ====================-->
	<ThingDef ParentName="HatMakeableBase">
		<defName>KP_GasMask_Standalone</defName>
		<label>Gas Mask</label>
		<description>.</description>

		<techLevel>Spacer</techLevel>

		<recipeMaker>
			<researchPrerequisite>LateIndustrialFlakArmor</researchPrerequisite>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="false">
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>

		<graphicData>
			<texPath>Fallback/Gasmask/gas_mask/gasmask</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>

		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>4500</WorkToMake>
			<Mass>1</Mass>
			<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Heat>0.7</ArmorRating_Heat>
