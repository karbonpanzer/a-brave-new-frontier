<?xml version='1.0' encoding='utf-8'?>
<Defs>
	<!--==================== KP_Offworlder_Civil | civil offworlders ====================-->
	<FactionDef ParentName="FactionBase">
		<defName>KP_Offworlder_Civil</defName>
		<label>civil offworlders</label>
		<description>Interstellar traders and diplomats backed by core-world governments and megacorporations. Driven by exploration and peace, yet armed against the dangers of the Rim.</description>
		<pawnSingular>offworlder</pawnSingular>
		<pawnsPlural>offworlders</pawnsPlural>
		<listOrderPriority>13</listOrderPriority>
		<settlementGenerationWeight>1</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<maxCountAtGameStart>1</maxCountAtGameStart>
		<canMakeRandomly>true</canMakeRandomly>
		<canSiege>true</canSiege>
		<canStageAttacks>true</canStageAttacks>
		<leaderTitle>representative</leaderTitle>
		<factionIconPath>UI/FactionIcons/OffworlderCivilOutpost</factionIconPath>
		<factionNameMaker>NamerFactionOffworlderCivil</factionNameMaker>
		<settlementNameMaker>NamerSettlementOffworlderCivil</settlementNameMaker>
		<colorSpectrum>
			<li>(0.65, 0.55, 0.85)</li>
			<li>(0.75, 0.70, 0.90)</li>
			<li>(0.80, 0.80, 0.95)</li>
			<li>(0.60, 0.65, 0.90)</li>
			<li>(0.70, 0.75, 0.95)</li>
		</colorSpectrum>
		<permanentEnemy>false</permanentEnemy>
		<techLevel>Spacer</techLevel>
		<allowedCultures>
			<li>Astropolitan</li>
		</allowedCultures>
		<disallowedMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">Structure_Animist</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
		</disallowedMemes>
		<backstoryFilters>
			<li>
				<categories>
					<li>Outlander</li>
				</categories>
				<commonality>0.05</commonality>
			</li>
			<li>
				<categories>
					<li>Offworld</li>
				</categories>
				<commonality>0.95</commonality>
			</li>
		</backstoryFilters>
		<xenotypeSet>
			<xenotypeChances>
				<Neanderthal MayRequire="Ludeon.RimWorld.Biotech">0.025</Neanderthal>
				<Hussar MayRequire="Ludeon.RimWorld.Biotech">0.05</Hussar>
				<Dirtmole MayRequire="Ludeon.RimWorld.Biotech">0.05</Dirtmole>
				<Impid MayRequire="Ludeon.RimWorld.Biotech">0.05</Impid>
				<Pigskin MayRequire="Ludeon.RimWorld.Biotech">0.10</Pigskin>
			</xenotypeChances>
		</xenotypeSet>
		<allowedArrivalTemperatureRange>-40~50</allowedArrivalTemperatureRange>
		<raidLootMaker>OutlanderRaidLootMaker</raidLootMaker>
		<caravanTraderKinds>
			<li>Caravan_Outlander_BulkGoods</li>
			<li>Caravan_Outlander_CombatSupplier</li>
			<li>Caravan_Outlander_Exotic</li>
		</caravanTraderKinds>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,      40)</li>
				<li>(70,     60)</li>
				<li>(700,   120)</li>
				<li>(1300,  200)</li>
				<li>(100000,10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers>
		  <!-- COMBAT PROFILE A: line infantry with light specialists -->
		  <li>
			<kindDef>Combat</kindDef>
			<commonality>45</commonality>
			<options>
			  <!-- line + light -->
			  <Offworlder_Civil_Conscript>6</Offworlder_Civil_Conscript>
			  <Offworlder_Civil_Infantry>12</Offworlder_Civil_Infantry>
			  <Offworlder_Civil_Heavy_Infantry>6</Offworlder_Civil_Heavy_Infantry>
			  <Offworlder_Civil_Anti_Armor_Infantry>4</Offworlder_Civil_Anti_Armor_Infantry>
			  <Offworlder_Civil_Gunner>6</Offworlder_Civil_Gunner>
			  <Offworlder_Civil_Heavy_Gunner>3</Offworlder_Civil_Heavy_Gunner>
			  <Offworlder_Civil_Ranger>5</Offworlder_Civil_Ranger>
			  <Offworlder_Civil_Heavy_Ranger>2</Offworlder_Civil_Heavy_Ranger>
			  <Offworlder_Civil_Scout>4</Offworlder_Civil_Scout>
			  <Offworlder_Civil_Marine>6</Offworlder_Civil_Marine>
			  <!-- support -->
			  <Offworlder_Civil_Medic>3</Offworlder_Civil_Medic>
			  <Offworlder_Civil_Engineer>3</Offworlder_Civil_Engineer>
			  <!-- officers (low incidence anchors) -->
			  <Offworlder_Civil_Ranger_Commander>1</Offworlder_Civil_Ranger_Commander>
			  <Offworlder_Civil_Infantry_Commander>1</Offworlder_Civil_Infantry_Commander>
			  <Offworlder_Civil_Sub_Commander>1</Offworlder_Civil_Sub_Commander>
			</options>
		  </li>

		  <!-- COMBAT PROFILE B: trench and assault bias -->
		  <li>
			<kindDef>Combat</kindDef>
			<commonality>35</commonality>
			<options>
			  <!-- trench & assault -->
			  <Offworlder_Civil_Trench_Infantry>8</Offworlder_Civil_Trench_Infantry>
			  <Offworlder_Civil_Trench_Raider>6</Offworlder_Civil_Trench_Raider>
			  <Offworlder_Civil_Trench_Shocktrooper>6</Offworlder_Civil_Trench_Shocktrooper>
			  <Offworlder_Civil_Lansquenets>3</Offworlder_Civil_Lansquenets>
			  <Offworlder_Civil_Trench_Dog>3</Offworlder_Civil_Trench_Dog>
			  <!-- fire and suppression -->
			  <Offworlder_Civil_Conflagrator>4</Offworlder_Civil_Conflagrator>
			  <Offworlder_Civil_Gunner>4</Offworlder_Civil_Gunner>
			  <Offworlder_Civil_Heavy_Gunner>3</Offworlder_Civil_Heavy_Gunner>
			  <!-- support -->
			  <Offworlder_Civil_Heavy_Medic>2</Offworlder_Civil_Heavy_Medic>
			  <Offworlder_Civil_Heavy_Engineer>2</Offworlder_Civil_Heavy_Engineer>
			  <!-- officers (low incidence anchors) -->
			  <Offworlder_Civil_Trench_Commander>1</Offworlder_Civil_Trench_Commander>
			  <Offworlder_Civil_Infantry_Commander>1</Offworlder_Civil_Infantry_Commander>
			  <Offworlder_Civil_High_Commander>1</Offworlder_Civil_High_Commander>
			</options>
		  </li>

		  <!-- PEACEFUL: civ presence with light escorts -->
		  <li>
			<kindDef>Peaceful</kindDef>
			<commonality>20</commonality>
			<options>
			  <Offworlder_Civil_Settler>12</Offworlder_Civil_Settler>
			  <Offworlder_Civil_Trader>8</Offworlder_Civil_Trader>
			  <Offworlder_Civil_Representative>2</Offworlder_Civil_Representative>
			  <!-- light guards -->
			  <Offworlder_Civil_Ranger>4</Offworlder_Civil_Ranger>
			  <Offworlder_Civil_Infantry>6</Offworlder_Civil_Infantry>
			  <Offworlder_Civil_Medic>2</Offworlder_Civil_Medic>
			  <Offworlder_Civil_Engineer>2</Offworlder_Civil_Engineer>
			  <Offworlder_Civil_Sub_Commander>1</Offworlder_Civil_Sub_Commander>
			</options>
		  </li>

		  <!-- TRADER: formal caravan with mixed guards -->
		  <li>
			<kindDef>Trader</kindDef>
			<traders>
			  <Offworlder_Civil_Trader>1</Offworlder_Civil_Trader>
			</traders>
			<carriers>
			  <Muffalo>8</Muffalo>
			</carriers>
			<guards>
			  <!-- replace old single Commander with mixed professional guards -->
			  <Offworlder_Civil_Infantry>6</Offworlder_Civil_Infantry>
			  <Offworlder_Civil_Ranger>4</Offworlder_Civil_Ranger>
			  <Offworlder_Civil_Marine>3</Offworlder_Civil_Marine>
			  <Offworlder_Civil_Sub_Commander>1</Offworlder_Civil_Sub_Commander>
			</guards>
		  </li>

		  <!-- SETTLEMENT: civilian majority, leadership present -->
		  <li>
			<kindDef>Settlement</kindDef>
			<options>
			  <Offworlder_Civil_Settler>20</Offworlder_Civil_Settler>
			  <Offworlder_Civil_Engineer>4</Offworlder_Civil_Engineer>
			  <Offworlder_Civil_Medic>4</Offworlder_Civil_Medic>
			  <Offworlder_Civil_Infantry>8</Offworlder_Civil_Infantry>
			  <Offworlder_Civil_Ranger>6</Offworlder_Civil_Ranger>
			  <Offworlder_Civil_Representative>1</Offworlder_Civil_Representative>
			  <!-- one of the commanders appears rarely -->
			  <Offworlder_Civil_Infantry_Commander>1</Offworlder_Civil_Infantry_Commander>
			  <Offworlder_Civil_Ranger_Commander>1</Offworlder_Civil_Ranger_Commander>
			  <Offworlder_Civil_Trench_Commander>1</Offworlder_Civil_Trench_Commander>
			</options>
		  </li>
		</pawnGroupMakers>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
		<maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
		<configurationListOrderPriority>25</configurationListOrderPriority>
	</FactionDef>

	<!--==================== KP_Offworlder_Rough | rough offworlders ====================-->
	<FactionDef ParentName="FactionBase">
		<defName>KP_Offworlder_Rough</defName>
		<label>rough offworlders</label>
		<description>A corporate-backed paramilitary force turned raiders. Driven by greed, they enslave and plunder under the guise of profit.</description>
		<pawnSingular>offworlder</pawnSingular>
		<pawnsPlural>offworlders</pawnsPlural>
		<listOrderPriority>14</listOrderPriority>
		<settlementGenerationWeight>1</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<maxCountAtGameStart>1</maxCountAtGameStart>
		<canMakeRandomly>true</canMakeRandomly>
		<canSiege>true</canSiege>
		<canStageAttacks>true</canStageAttacks>
		<leaderTitle>warlord</leaderTitle>
		<factionIconPath>UI/FactionIcons/OffworlderRoughOutpost</factionIconPath>
		<factionNameMaker>NamerFactionOffworlderRough</factionNameMaker>
		<settlementNameMaker>NamerSettlementOffworlderRough</settlementNameMaker>
		<colorSpectrum>
			<li>(0.50, 0.10, 0.10)</li>
			<li>(0.40, 0.05, 0.05)</li>
			<li>(0.60, 0.15, 0.15)</li>
			<li>(0.45, 0.08, 0.08)</li>
			<li>(0.55, 0.12, 0.12)</li>
		</colorSpectrum>
		<permanentEnemy>true</permanentEnemy>
		<techLevel>Spacer</techLevel>
		<allowedCultures>
			<li>Astropolitan</li>
		</allowedCultures>
		<disallowedMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">Structure_Animist</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
		</disallowedMemes>
		<requiredMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
		</requiredMemes>
		<backstoryFilters>
			<li>
				<categories>
					<li>Outlander</li>
				</categories>
				<commonality>0.05</commonality>
			</li>
			<li>
				<categories>
					<li>Offworld</li>
				</categories>
				<commonality>0.95</commonality>
			</li>
		</backstoryFilters>
		<xenotypeSet>
			<xenotypeChances>
				<Neanderthal MayRequire="Ludeon.RimWorld.Biotech">0.025</Neanderthal>
				<Hussar MayRequire="Ludeon.RimWorld.Biotech">0.05</Hussar>
				<Dirtmole MayRequire="Ludeon.RimWorld.Biotech">0.05</Dirtmole>
				<Impid MayRequire="Ludeon.RimWorld.Biotech">0.05</Impid>
			</xenotypeChances>
		</xenotypeSet>
		<allowedArrivalTemperatureRange>-40~50</allowedArrivalTemperatureRange>
		<raidLootMaker>OutlanderRaidLootMaker</raidLootMaker>
		<caravanTraderKinds>
			<li>Caravan_Outlander_BulkGoods</li>
			<li>Caravan_Outlander_CombatSupplier</li>
			<li>Caravan_Outlander_Exotic</li>
		</caravanTraderKinds>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,      40)</li>
				<li>(70,     60)</li>
				<li>(700,   120)</li>
				<li>(1300,  200)</li>
				<li>(100000,10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers>
			<li>
				<kindDef>Combat</kindDef>
				<commonality>40</commonality>
				<options>
					<Offworlder_Rough_Scrapper>8</Offworlder_Rough_Scrapper>
					<Offworlder_Rough_Fence>6</Offworlder_Rough_Fence>
					<Offworlder_Rough_Engineer>4</Offworlder_Rough_Engineer>
					<Offworlder_Rough_Scout>2</Offworlder_Rough_Scout>
					<Offworlder_Rough_Warlord>1</Offworlder_Rough_Warlord>
				</options>
			</li>
			<li>
				<kindDef>Combat</kindDef>
				<commonality>30</commonality>
				<options>
					<Offworlder_Rough_Engineer>3</Offworlder_Rough_Engineer>
					<Offworlder_Rough_Marine>4</Offworlder_Rough_Marine>
					<Offworlder_Rough_Scrapper>2</Offworlder_Rough_Scrapper>
					<Offworlder_Rough_Warlord>1</Offworlder_Rough_Warlord>
				</options>
			</li>
			<li>
				<kindDef>Combat</kindDef>
				<commonality>20</commonality>
				<options>
					<Offworlder_Rough_Marine>3</Offworlder_Rough_Marine>
					<Offworlder_Rough_Scout>3</Offworlder_Rough_Scout>
					<Offworlder_Rough_Engineer>2</Offworlder_Rough_Engineer>
					<Offworlder_Rough_Warlord>1</Offworlder_Rough_Warlord>
				</options>
			</li>
			<li>
				<kindDef>Settlement</kindDef>
				<commonality>10</commonality>
				<options>
					<Offworlder_Rough_Scrapper>10</Offworlder_Rough_Scrapper>
					<Offworlder_Rough_Fence>8</Offworlder_Rough_Fence>
					<Offworlder_Rough_Engineer>4</Offworlder_Rough_Engineer>
					<Offworlder_Rough_Scout>2</Offworlder_Rough_Scout>
					<Offworlder_Rough_Marine>2</Offworlder_Rough_Marine>
					<Offworlder_Rough_Warlord>1</Offworlder_Rough_Warlord>
				</options>
			</li>
		</pawnGroupMakers>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
		<maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
		<configurationListOrderPriority>26</configurationListOrderPriority>
	</FactionDef>

</Defs>