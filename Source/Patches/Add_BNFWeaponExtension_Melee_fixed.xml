<?xml version="1.0" encoding="utf-8"?>
<!-- Adds BNFWeaponExtension (with displayName) to melee weapon ThingDefs -->
<Patch>
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName="KP_Trench_Spike"]</xpath>
    <value>
      <modExtensions>
        <li Class="BNF.StyleSwitcher.BNFWeaponExtension">
          <displayName>Trench Knife</displayName>
        </li>
      </modExtensions>
    </value>
  </Operation>

